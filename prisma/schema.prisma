datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model project {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  image       String?
  links       link[]
}

enum linkType {
  GITHUB
  SWAGGER
  PLAYGROUND
  LIVE
}

model link {
  id        Int      @id @default(autoincrement())
  type      linkType
  url       String
  projectId Int
  project   project  @relation(fields: [projectId], references: [id])
}

model user {
  id       String  @id
  email    String  @unique
  password String
  token    String?
}
